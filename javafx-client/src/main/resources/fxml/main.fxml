<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.petapp.client.controller.MainController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <Label text="Управление питомцами" style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <BorderPane.margin>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <TableView fx:id="petTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nameColumn" text="Имя" prefWidth="150"/>
                <TableColumn fx:id="speciesColumn" text="Вид" prefWidth="150"/>
                <TableColumn fx:id="ageColumn" text="Возраст" prefWidth="80"/>
                <TableColumn fx:id="ownerColumn" text="Владелец" prefWidth="150"/>
            </columns>
            <BorderPane.margin>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>

                <Label text="Вид:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="speciesField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

                <Label text="Возраст:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="ageField" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="100"/>

                <Label text="Владелец:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="ownerField" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="200"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="addButton" text="Добавить" onAction="#handleAdd" prefWidth="100"/>
                <Button fx:id="updateButton" text="Обновить" onAction="#handleUpdate" prefWidth="100"/>
                <Button fx:id="deleteButton" text="Удалить" onAction="#handleDelete" prefWidth="100"/>
                <Button fx:id="refreshButton" text="Обновить список" onAction="#handleRefresh" prefWidth="150"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>